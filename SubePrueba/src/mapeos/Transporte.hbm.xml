<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="datos.Transporte" table="transporte">
		<id column="idTransporte" name="idTransporte" type= "long">
			<generator class="identity"/>
		</id>
		<property column="tipoTransporte" name="tipoTransporte" type="int"/>
		<property column="descripcion" name="descripcion" type="string"/>
		
		<joined-subclass name = "datos.Subte" table = "subte" >
			<key column = "idSubte" />
			<many-to-one name = "lineaSubte" class = "datos.LineaSubte" column = "idLineaSubte" cascade="all" not-null = "true" />
		</joined-subclass>
		
		<joined-subclass name = "datos.Colectivo" table = "colectivo" >
			<key column = "idColectivo" />
			<property column="interno" name="interno" type="long"/>
			<many-to-one name = "lineaColectivo" class = "datos.LineaColectivo" column = "idLineaColectivo" cascade="all" not-null = "true" />
		</joined-subclass>
		
		<joined-subclass name = "datos.Tren" table = "tren" >
			<key column = "idTren" />
			<many-to-one name = "lineaTren" class = "datos.LineaTren" column = "idLineaTren" cascade="all" not-null = "true" />
		</joined-subclass>
		
	</class>
</hibernate-mapping>